name: "Daily"

on:
    schedule:
        -   cron: '0 7 * * *'
    workflow_dispatch:

jobs:
    builld:
        permissions:
            contents: write
            deployments: write
            packages: write
            id-token: write
        uses: ./.github/workflows/java_build.yml
        with:
            run_update: true
            run_test: true
            run_deploy: patch
        secrets: inherit
